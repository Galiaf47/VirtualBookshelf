<div ng-show="menu.inventory.isShow()" class="uiPanel inventory" block-ui="inventory">
	<div ng-hide="menu.createBook.isShow()">
		<div class="search">
			<span class="fa fa-search"></span>
			<input ng-model="menu.inventory.search" type="text"></input>
		</div>
		
		<ul>
			<li dir-paginate="item in menu.inventory.list | filter:menu.inventory.search | orderBy:'title' | itemsPerPage:5">
				<div class="inventoryItem" ng-class="{selected: menu.inventory.isBookSelected(item.id)}" ng-click="menu.inventory.select(item)">
					<i class="fa fa-book"></i>
					<span ng-bind="item.title"></span>

	    			<div class="inventoryControls">
		    			<a class="fa fa-exchange inventoryItemButton" ng-click="menu.inventory.place(item)"></a>
		    			<a class="fa fa-trash inventoryItemButton" ng-click="menu.inventory.remove(item)"></a>
		    			<a class="fa fa-gear inventoryItemButton" ng-click="menu.inventory.expand(item)"></a>
	    			</div>
				</div>
			</li>	
		</ul>

		<center>
			<dir-pagination-controls></dir-pagination-controls>
		</center>
		<a ng-click="menu.inventory.addBook()" class="fa fa-plus fa-2x submitButton"></a>
	</div>

	<ng-include src="'/ui/book.ejs'"></ng-include>
</div>