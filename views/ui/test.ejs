<!DOCTYPE html>
<html>
	<head>
		<title><%= __('page.title') %></title>

		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="keywords" content="<%= __('page.keywords') %>">
		<meta name="description" content="<%= __('page.description') %>">
	
		<script src="/js/vendor.js"></script>

		<link rel="stylesheet" type="text/css" href="/css/font-awesome/css/font-awesome.min.css">
		<link rel="stylesheet" type="text/css" href="/css/vendor.css">
		<link rel="stylesheet" type="text/css" href="/css/ngDialog-theme-default.min.css">
		<link rel="stylesheet" type="text/css" href="/css/style.css">
	</head>

	<body>
		<div class="uiPanel mainMenu">
			<div>
				<ul class="select">
					<li><i class="fa fa-plus fa-2x"></i><%=__('ui.menuItem.create')%></li>
					<li><i class="fa fa-home fa-2x"></i><%=__('ui.menuItem.selectLibrary')%></li>
					<li><i class="fa fa-comment-o fa-2x"></i><%=__('ui.menuItem.leaveFeedback')%></li>
					<li><i class="fa fa-sign-in fa-2x"></i><%=__('ui.menuItem.login')%></li>
					<li><i class="fa fa-plug fa-2x"></i><%=__('ui.menuItem.linkAccount')%></li>
					<li><i class="fa fa-sign-out fa-2x"></i><%=__('ui.menuItem.logout')%></li>
				</ul>
			</div>

			<div>
				<ul class="select">
					<li><i class="fa fa-home fa-2x"></i><%=__('ui.menuItem.createLibrary')%></li>
					<li><i class="fa fa-bars fa-2x"></i><%=__('ui.menuItem.createSection')%></li>
				</ul>
			</div>

			<a class="button"><i class="fa fa-sliders fa-lg"></i><%= __('ui.menuItem.mainButton') %></a>
		</div>		

		<div class="inventory">
			<div class="uiPanel">
				<div class="search">
					<span class="fa fa-search"></span>
					<input ng-model="inventory.search" type="text"></input>
				</div>
				
				<ul>
					<li>
						<div class="inventoryItem">
							<i class="fa fa-book"></i>
							<span>item.title</span>
						</div>
					</li>	
					<li>
						<div class="inventoryItem selected">
							<i class="fa fa-book"></i>
							<span>item.title</span>
						</div>
					</li>
				</ul>

				<center>
					<ul class="pagination select">
					    <span class="fa fa-chevron-left disabled"></span>

					    <li class="selectedItem">1</li>
					    <li>2</li>
					    <li>3</li>
					    <li class="disabled">4</li>

					    <span class="fa fa-chevron-right"></span>
					</ul>					
				</center>

				<div class="buttons">
					<a class="button"><i class="fa fa-plus fa-lg"></i><%= __('ui.dialog.create') %></a>
				</div>
			
				<div class="buttons">
					<a class="button"><i class="fa fa-times fa-lg"></i><%= __('ui.dialog.close') %></a>
					<a class="button"><i class="fa fa-check fa-lg"></i><%= __('ui.feedback.submit') %></a>
				</div>
			</div>		
		</div>

		<div ng-controller="ToolsCtrl as tools" class="uiPanel tools">
			<div ng-show="tools.isShow()">
				<h3 ng-show="tools.isBook()"><%=__('ui.tools.header.book')%></h3>
				<h3 ng-show="tools.isSection()"><%=__('ui.tools.header.section')%></h3>
				<h4 ng-bind="tools.getTitle()"></h4>
				<hr/>

				<ul class="select" ng-mouseup="tools.stop()" ng-mouseleave="tools.stop()">
					<li ng-click="tools.watch()" ng-show="tools.isWatchable()"><i class="fa fa-eye fa-lg"></i><%=__('ui.tools.watch')%></li>
					<li ng-click="tools.unwatch()" ng-show="tools.isWatchActive()"><i class="fa fa-eye-slash fa-lg"></i><%=__('ui.tools.unwatch')%></li>
					<li ng-mousedown="tools.rotateLeft()" ng-show="tools.isRotatable()"><i class="fa fa-undo fa-lg"></i><%=__('ui.tools.rotate')%></li>
					<li ng-mousedown="tools.rotateRight()" ng-show="tools.isRotatable()"><i class="fa fa-repeat fa-lg"></i><%=__('ui.tools.rotate')%></li>
					<li ng-click="tools.place()" ng-show="tools.isPlaceble()" ng-class="{selectedItem: tools.isPlacing()}">
						<i class="fa fa-long-arrow-left fa-lg"></i><%=__('ui.tools.place')%>
						<div ng-show="tools.isPlacing()" class="sub"><%=__('ui.tools.placing')%></div>
					</li>
					<li ng-click="tools.unplace()" ng-show="tools.isUnplaceble()"><i class="fa fa-long-arrow-right fa-lg"></i><%=__('ui.tools.unplace')%></li>
					<li ng-click="tools.edit()" ng-show="tools.isEditable()"><i class="fa fa-sliders fa-lg"></i><%=__('ui.tools.edit')%></li>
					<li ng-click="tools.delete()" ng-show="tools.isDeletable()"><i class="fa fa-trash fa-lg"></i><%=__('ui.tools.delete')%></li>
				</ul>
			
				<hr/>
			</div>

			<div class="navigation" ng-mouseup="navigation.stop()" ng-mouseleave="navigation.stop()">
				<span ng-mousedown="navigation.left()" class="fa fa-chevron-left fa-2x"></span>
				<span ng-mousedown="navigation.right()" class="fa fa-chevron-right fa-2x"></span>
				<span ng-mousedown="navigation.backward()" class="fa fa-chevron-down fa-2x"></span>
				<span ng-mousedown="navigation.forward()" class="fa fa-chevron-up fa-2x"></span>
			</div>
		</div>
			
	</body>
</html>