<!DOCTYPE html>
<html>
	<head>
		<title>Virtual Bookshelf</title>

		<script src="/js/jquery-1.11.0.min.js"></script>		
		<script src="/js/three.js/three.min.js"></script>
		<script src="/js/three.js/Detector.js"></script>
		<script src="/js/three.js/MTLLoader.js"></script>
		<script src="/js/three.js/OBJMTLLoader.js"></script>
		<script src="/js/three.js/OrbitControls.js"></script>
		<script src="/js/VirtualBookshelf/main.js"></script>
		<script src="/js/VirtualBookshelf/controls.js"></script>
		<script src="/js/VirtualBookshelf/ui.js"></script>
		<script src="/js/VirtualBookshelf/data.js"></script>
		<style>
			body {
				padding: 0;
				margin: 0;
  				overflow: hidden;
			}
			canvas {
				width: 100%;
				height: 100%;
			}
			p {
				color: #C5DEBF;
				text-decoration: blink;
				font-size: 14pt;
				margin: 0;
				margin-bottom: 5px;
			}
			a {
				color: #9582FF;
				text-decoration: none;
				cursor: pointer;
				margin: 
			}
			div.ui {
				position: absolute;
				left: 0;
				top: 0;
			}
			div.ui div.uiPanel {
				border: 1px;
				border-color: #8F2222;
				border-style: dashed;
				margin: 10px;
				padding: 15px;
				display: none;
			}
			ul {
				margin: 0;
				padding: 0;
				list-style-type: none;
			}
		</style>
	</head>
	<body>
		<script type="text/javascript">
			VirtualBookshelf.saveUser(<%- JSON.stringify(user) %>);
		</script>

    	<div id="LIBRARY"></div>

    	<div class="ui">
	    	<div id="UI_LOGIN" class="uiPanel">
	    		<p><%= __('ui.login.text') %></p>
	    		<a href="/auth/google"><img src="/img/google.png"/></a>
	    	</div>

	    	<div id="UI_LIBRARY_CREATE" class="uiPanel">
	    		<p><%= __('ui.library.create.text') %></p>
	    		<p><%= __('ui.library.create.select.label') %></p>
	    		<br>
	    		<select id="UI_LIBRARY_CREATE_SELECT"></select>
	    		<a onclick="VirtualBookshelf.UI.createLibrary();"><%= __('ui.library.create.link') %></a>
	    	</div>

	    	<div id="UI_LIBRARY_SELECT" class="uiPanel">
	    		<p><%= __('ui.library.select.text') %></p>
	    		<br>
	    		<select id="UI_LIBRARY_SELECT_DROPDOWN"></select>
	    		<a onclick="VirtualBookshelf.UI.selectLibrary();"><%= __('ui.library.select.link') %></a>
	    	</div>

	    	<div id="UI_LIBRARY_MENU" class="uiPanel">
	    		<select id="UI_SECTION_CREATE_DROPDOWN"></select>
    			<a onclick="VirtualBookshelf.UI.createSection();"><%= __('ui.library.menu.add.section') %></a>
    			<br>
	    		<select id="UI_BOOK_CREATE_DROPDOWN"></select>
    			<a onclick="alert('Not implemented!');"><%= __('ui.library.menu.add.book') %></a>
    			<br>
    			<a onclick="alert('Not implemented!');"><%= __('ui.library.menu.exit') %></a>
	    	</div>
    	</div>
	</body>
</html>