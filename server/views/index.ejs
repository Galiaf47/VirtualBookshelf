<!DOCTYPE html>
<html>
	<head>
		<title><%= __('page.title') %></title>

		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="keywords" content="<%= __('page.keywords') %>">
		<meta name="description" content="<%= __('page.description') %>">
		<meta name="yandex-verification" content="67e0a4e16e84c2d6"/>
        <meta name="google-site-verification" content="aFNHFvRC7fyGtZnece7xRY29JphEz9klH3WwqWeiu9U"/>

        <link rel="stylesheet" href="/css/vendors.css">
        <link rel="stylesheet" href="/css/app.css">
	</head>

	<body block-ui="global">
		<div id="fb-root"></div>
		
		<canvas id="LIBRARY"></canvas>
		<div growl></div>

        <div ng-controller="WelcomeCtrl as welcome" ng-show="welcome.isShow()" class="welcomePage uiPanel">
            <center>
                <h1 class="header"><%= __('ui.welcome.header') %></h1>
            </center>

            <p><%= __('ui.welcome.description') %></p>

            <div ng-show="welcome.isLoaded()" ng-cloak>
                <div ng-show="welcome.isShowAuthorization()" ng-click="welcome.showLoginDialog()" class="welcomeControl">
                    <p><%= __('ui.welcome.login') %></p>
                    <i class="fa fa-sign-in fa-2x"></i>
                    <p><%=__('ui.menuItem.login')%></p>
                </div>

                <div ng-show="welcome.isShowCreateLibrary()" ng-click="welcome.showCreateLibraryDialog()" class="welcomeControl">
                    <p><%= __('ui.library.create.text') %></p>
                    <i class="fa fa-plus fa-2x"></i>
                    <p><%=__('ui.menuItem.createLibrary')%></p>
                </div>
                
                <div ng-show="welcome.isShowSelectLibrary()" ng-click="welcome.showSelectLibraryDialog()" class="welcomeControl">
                    <p><%=__('ui.library.select.text')%></p>
                    <i class="fa fa-home fa-2x"></i>
                    <p><%=__('ui.menuItem.selectLibrary')%></p>
                </div>
            </div>

            <span ng-click="welcome.close()" class="fa fa-times fa-2x submitButton" ng-cloak></span>
        </div>

		<!-- UI -->
		<ng-include src="'ui/mainMenu.ejs'"></ng-include>
    	<ng-include src="'ui/inventory.ejs'"></ng-include>
    	<!-- <ng-include src="'ui/welcome.ejs'"></ng-include> -->
		<ng-include src="'ui/tooltip.ejs'"></ng-include>
		<ng-include src="'ui/tools.ejs'"></ng-include>

		<!-- dialogs -->
    	<ng-include src="'ui/createLibrary.ejs'"></ng-include>
    	<ng-include src="'ui/createSection.ejs'"></ng-include>
    	<ng-include src="'ui/selectLibrary.ejs'"></ng-include>
    	<ng-include src="'ui/feedback.ejs'"></ng-include>
    	<ng-include src="'ui/book.ejs'"></ng-include>
    	<ng-include src="'ui/loginDialog.ejs'"></ng-include>
    	<ng-include src="'ui/registrationDialog.ejs'"></ng-include>
    	<ng-include src="'ui/linkAccount.ejs'"></ng-include>
    	<ng-include src="'ui/confirmDialog.ejs'"></ng-include>

        <script src="/js/vendors.js"></script>
        <script src="/js/app.js"></script>
	</body>
</html>
